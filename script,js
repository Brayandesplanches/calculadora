const display = document.getElementById('display');
const buttons = document.querySelectorAll('button');

buttons.forEach(button => {
    button.addEventListener('click', () => {
        const value = button.value;

        if (value === '=') {
            try {
                display.value = eval(display.value);
            } catch (error) {
                display.value = 'Erro';
            }
        } else if (value === 'AC') {
            display.value = '';
        } else {
            display.value += value;
        }
    });
});
